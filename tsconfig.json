{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "allowImportingTsExtensions": true,  // <-- можно писать .ts в импортах
    "emitDeclarationOnly": true           // <-- только декларации
  },
  "include": ["src"]
}
